<% include ../partials/header %>
<div class="container">
    <header class="jumbotron">
        <h1 class="display-4">Welcome to Yelp Camp</h1>
        <p class="lead">View campgrounds our community has collected from all over the world.</p>
        <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
    </header>

    <section class="content">
        <div class="row">
            <% campgrounds.forEach((campground) => { %>
            <div class="col-sm-6 col-md-4 d-flex mb-3 align-items-stretch">
                <div class="card">
                    <img class="card-img-top" src="<%= campground.image %>">
                    <div class="card-body">
                        <h4 class="card-title mb-0"><%= campground.name%></h4>
                        <p>
                            <small class="text-muted mt-0">$<%= campground.price %>/night</small>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">More Info</a>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </section>
</div>
<% include ../partials/footer %>
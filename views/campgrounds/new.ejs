<% include ../partials/header %>

<div class="container mt-3">
    <h3 class="text-center">Create a New Campground</h3>
    <form class="mb-3" action="/campgrounds" method="POST">
        <div class="form-group">
            <label for="campName">Name of Campground</label>
            <input type="text" name="name" placeholder="name..." id="campName" class="form-control">
        </div>
        <div class="form-group">
            <label for="campPrice">Price Per Night</label>
            <input type="number" name="price" id="campPrice" placeholder="price" class="form-control" min="0.01" step="0.01">
        </div>
        <div class="form-group">
            <label for="campImg">Link to Image of Campground</label>
            <input type="text" name="image" placeholder="image url..." id="campImg" class="form-control">
        </div>
        <div class="form-group">
            <label for="campDesc">Description of Campground</label>
            <input type="text" name="description" id="campDesc" placeholder="description..." class="form-control">
        </div>
        <input class="btn btn-primary" type="submit">
    </form>
    <a href="/campgrounds">Go Back</a>
</div>

<% include ../partials/footer %>
<% include ../partials/header %>

<div class="container mt-3">
    <h3 class="text-center">Edit <%= campground.name %></h3>
    <form class="mb-3" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="campName">Name of Campground</label>
            <input type="text" name="campground[name]" value="<%= campground.name %>" id="campName" class="form-control">
        </div>
        <div class="form-group">
            <label for="campPrice">Price Per Night</label>
            <input type="number" name="campground[price]" id="campPrice" value="<%= campground.price %>" class="form-control" min="0.01" step="0.01">
        </div>
        <div class="form-group">
            <label for="campImg">Link to Image of Campground</label>
            <input type="text" name="campground[image]" value="<%= campground.image %>" id="campImg" class="form-control">
        </div>
        <div class="form-group">
            <label for="campDesc">Description of Campground</label>
            <input type="text" name="campground[description]" id="campDesc" value="<%= campground.description %>" class="form-control">
        </div>
        <input class="btn btn-primary" type="submit">
    </form>
    <a href="/campgrounds/<%= campground._id %>">Go Back</a>
</div>

<% include ../partials/footer %>